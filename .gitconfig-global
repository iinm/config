[core]
	trustctime = false
	excludesfile = ~/.gitignore-global

[credential]
	helper = cache

[merge]
	tool = vimdiff

[mergetool]
	prompt = true

[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
	prompt = false

[diff]
	tool = vimdiff

[rebase]
	instructionFormat = "(%an) %s"
